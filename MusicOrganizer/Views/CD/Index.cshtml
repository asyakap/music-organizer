@{
  Layout = "_Layout";
}

@using MusicOrganizer.Models;

    <h1>CDs</h1>

    @if (@Model.Count == 0)
    {
      <h3>No CDs have been added yet!</h3>
    } 

    @foreach (CD cd in Model)
    {
      <h3><a href='/cd/@cd.Id'>@cd.Name by @cd.Artist</a></h3>
    }

    <p><a href='/'>Back home</a></p>